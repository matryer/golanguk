* OK pattern example

  type Gopher struct {
    Name string
    Country string
  }

  func (g *Gopher) OK() error {
    if len(g.Name) == 0 {
      return ErrRequired("name")
    }
    if len(g.Country) == 0 {
      return ErrRequired("country")
    }
    return nil
  }

  func handleCreateGopher(w http.ResponseWriter, r *http.Request) error {
  	var g gopher
  	if err := decode(r, &g); err != nil {
  		return err
  	}
  	respond.With(w, r, http.StatusOK, &g)
  	return nil
  }

